<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ldionis.trainupapplication.WaterControllActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/scr_left"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
 />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/scr_right"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true" />
    <HorizontalScrollView
        android:id="@+id/waterVessels"
        android:layout_centerHorizontal="true"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottleofwater"
            android:text="500"
            android:textSize="20dp"
            android:onClick="onButtonClick2f"
            android:gravity="bottom|center"/>
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/glass_of_water"
            android:text="400"
            android:textSize="20dp"
            android:gravity="bottom|center"
            android:onClick="onButton400"/>
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/little_glass_of_water"
                android:text="300"
                android:textSize="20dp"
                android:gravity="bottom|center"
                android:onClick="onButton300"/>
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cup_of_water"
                android:text="150"
                android:textSize="20dp"
                android:gravity="bottom|center"
                android:onClick="onButton150"/>
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/glassy_of_water"
                android:text="100"
                android:textSize="20dp"
                android:gravity="bottom|center"
                android:onClick="onButton100"/>
</LinearLayout>
    </HorizontalScrollView>
    <me.itangqi.waveloadingview.WaveLoadingView
        android:id="@+id/waveLoadingView"
        android:layout_marginTop="150dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:wlv_borderColor="#26000000"
        app:wlv_borderWidth="3dp"
        app:wlv_progressValue="1000"
        app:wlv_shapeType="circle"
        app:wlv_round_rectangle="true"
        app:wlv_triangle_direction="north"
        app:wlv_titleCenter="Center Title"
        app:wlv_titleCenterColor="@color/colorPrimary"
        app:wlv_titleCenterSize="24sp"
        app:wlv_waveAmplitude="70"
        app:wlv_waveColor="#2991ec"

        android:layout_centerHorizontal="true" />
</RelativeLayout>
