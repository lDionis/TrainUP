<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ldionis.trainupapplication.TimerActivity">
    <ProgressBar
        android:id="@+id/barTimer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circulal_progressbar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textTimer"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="00:00"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="ПЕРЕРВА"
        android:textSize="50dp"
        android:textColor="@color/whity"
        android:id="@+id/button"
        android:background="@drawable/button_break"
        android:textStyle="bold"
        android:typeface="normal"
        android:onClick="startTime"
        android:layout_below="@+id/barTimer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
<TextView
    android:gravity="center"

    android:textSize="12dp"
    android:text="Після кожного підходу потрібно зробити перерву \nТаймер сповістить вас, коли можна приступати \nдо виконання вправи"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/button"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView"
        android:background="@drawable/add_timer"
        android:paddingLeft="150dp"
        android:clickable="true"
        android:onClick="onTimeSetClick"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textTimer"
        android:layout_toEndOf="@+id/textTimer"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

</RelativeLayout>
