<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >


    <item android:id="@android:id/background">
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%" >
        <shape
            android:innerRadius="110dp"
            android:shape="ring"
            android:thickness="11dp"
            android:useLevel="false">

            <solid android:color="@color/bgcircle" />
        </shape></rotate>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%" >

        <shape
            android:innerRadius="110dp"
            android:shape="ring"
            android:thickness="11dp"
            android:useLevel="true"
            >

            <gradient
                android:startColor="@color/timorango"
                android:endColor="@color/orangy"
                android:type="sweep" />
        </shape></rotate>
    </item>
</layer-list>